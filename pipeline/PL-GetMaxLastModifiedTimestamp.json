                    "formatSettings": {
                        "type": "DelimitedTextReadSettings"
                    }
                }
            },
            {
                "name": "LoopInFiles",
                "type": "ForEach",
                "dependsOn": [
                    {
                        "activity": "GetFiles",
                        "dependencyConditions": [
                            "Succeeded"
